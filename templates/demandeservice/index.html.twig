{% extends 'baseBack.html.twig' %}

{% block title %}OneUrban | Dashboard | Liste des Demandes Service{% endblock %}

{% block body %}
    <h1>| Liste des Demandes Service</h1>

    <button style="margin-left:50px;width:150px;" class="btn btn-block btn-primary">
        <a style="color:#fff;" href="{{ path('app_demandeservice_new') }}"><i class="fa fa-plus"></i> Créer une nouvelle</a>
    </button>
    <br>
    <div style="background-color:#fff;">
        <br>
        <input style="margin-left:80px;width:950px;" type="text" class="form-control" id="searchInput" placeholder="Search&hellip;">
        <br><br>
        <div style="margin-top:-135px;margin-left:1050px;" class="btn-group">
            <button type="button" id="actionBtn" class="btn btn-info">Tri Par</button>
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><a href="{{ path('app_demandeservice_index') }}" onclick="setActionText(this)">Défaut</a></li>
                <li class="divider"></li>
                <li><a href="{{ path('app_demandeservice_index_sort_date') }}" onclick="setActionText(this)">Date</a></li>
                <li><a href="{{ path('app_demandeservice_index_sort_statut') }}" onclick="setActionText(this)">Statut</a></li>
            </ul>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Service</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for demandeservice in demandeservices %}
                <tr>
                    <td>{{ demandeservice.date ? demandeservice.date|date('Y-m-d') : '' }}</td>
                    <td>
                        {% if demandeservice.status == 'PENDING' %}
                            <span class="label label-warning">Pending</span>
                        {% elseif demandeservice.status == 'APPROVED' %}
                            <span class="label label-success">Approved</span>
                        {% elseif demandeservice.status == 'REJECTED' %}
                            <span class="label label-danger">Rejected</span>
                        {% else %}
                            <span class="label label-secondary">{{ demandeservice.status }}</span>
                        {% endif %}
                    </td>
                    <td>{{ demandeservice.service.nom }}</td>
                    <td>
                        <button style="width:30px;" class="btn btn-block btn-info btn-sm"><a style="color:#fff;" href="{{ path('app_demandeservice_show', {'id': demandeservice.id}) }}"><i class="fa fa-ellipsis-v"></i></a></button>
                        &nbsp;
                        <button style="margin-top:-50px;margin-left:35px;width:30px;" class="btn btn-block btn-success btn-sm"><a style="color:#fff;" href="{{ path('app_demandeservice_edit', {'id': demandeservice.id}) }}"><i class="fa fa-edit"></i></a></button>
                        &nbsp;
                        {{ include('demandeservice/_delete_form.html.twig') }}
                        &nbsp;
                        <button style="margin-top:-50px;margin-left:107px;width:80px;" class="btn btn-block btn-warning btn-sm"><a style="color:#fff;" href="{{ path('app_demandeservice_approval', {'id': demandeservice.id}) }}"><i class="fa fa-plus"></i></a> Approve</button>
                        &nbsp;
                        <button style="margin-top:-50px;margin-left:195px;width:80px;" class="btn btn-block btn-primary btn-sm"><a style="color:#fff;" href="{{ path('app_demandeservice_reject', {'id': demandeservice.id}) }}"><i class="fa fa-minus"></i> Reject</a></button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No Demande Service Found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


<script>
    function setActionText(element) {
        const actionBtn = document.getElementById("actionBtn");
        actionBtn.textContent = element.textContent;
    }
</script>



<script>
	function filterTable() {
        const filter = document.getElementById('searchInput').value.toUpperCase();
        const rows = document.querySelectorAll('table tr');
        for (let i = 1; i < rows.length; i++) {
            const cols = rows[i].querySelectorAll('td');
            let visible = false;
            for (let j = 0; j < cols.length; j++) {
                const cell = cols[j];
                if (cell.innerText.toUpperCase().indexOf(filter) > -1) {
                    visible = true;
                    break;
                }
            }
            rows[i].style.display = visible ? '' : 'none';
        }
    }
    document.getElementById('searchInput').addEventListener('keyup', filterTable);
</script>

{% endblock %}
